<h1>Netflix and Grill</h1>
<p>TV and steaks, everyone's favorites</p>
<div id="grill-container">
  <div id="shows">
    <h2>On the TV</h2>
    <form action="get" id="watchin">
      <input type="text" placeholder="Title">
      <input type="submit" name="Seach">
    </form>
    <div id="show-list">
      <!--  shows will be rendered -->
    </div>
  </div>
  <div id="grills">
    <h2>From the Grill</h2>
    <form action="get" id='grillin'>
      <select name="meats">
        <option value="steak">Steak</option>
        <option value="pork">Pork</option>
        <option value="chicken">Chicken</option>
        <option value="ribs">Ribs</option>
      </select>
      <input type="submit" name="Search">
    </form>
    <div id="grill">
      <!--  recipes will be rendered -->
    </div>
  </div>

</div>
